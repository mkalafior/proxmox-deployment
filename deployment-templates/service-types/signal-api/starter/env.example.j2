# Signal CLI REST API Environment Configuration
# Copy this file to .env and customize as needed

# Service Configuration
MODE=normal
PORT={{ app_port | default('8080') }}
LOG_LEVEL=info

# Signal CLI Configuration
SIGNAL_CLI_CONFIG_DIR=/opt/signal-api/data

# Auto-receive scheduling (cron format)
# Examples:
# AUTO_RECEIVE_SCHEDULE=0 22 * * *    # Daily at 10 PM
# AUTO_RECEIVE_SCHEDULE=*/15 * * * *   # Every 15 minutes
AUTO_RECEIVE_SCHEDULE=

# Advanced Settings (usually don't need to change)
SIGNAL_CLI_UID=1000
SIGNAL_CLI_GID=1000
SWAGGER_HOST={{ service_hostname }}:{{ app_port | default('8080') }}
DEFAULT_SIGNAL_TEXT_MODE=normal

# JSON-RPC Mode Settings
JSON_RPC_IGNORE_ATTACHMENTS=false
JSON_RPC_IGNORE_STORIES=false
