[Unit]
Description={{ service_name }} Python Application
After=network.target

[Service]
Type=simple
User={{ app_user }}
Group={{ app_user }}
WorkingDirectory={{ app_dir }}
ExecStart=/bin/bash -c 'cd {{ app_dir }} && if [ -f ./venv/bin/python ]; then ./venv/bin/python {{ app_main_file | default("app.py") }}; else ./venv/bin/python3 {{ app_main_file | default("app.py") }}; fi'
Restart=always
RestartSec=10
Environment=PYTHONPATH={{ app_dir }}
Environment=PYTHONUNBUFFERED=1
{% if app_port is defined %}
Environment=PORT={{ app_port }}
{% endif %}

[Install]
WantedBy=multi-user.target
